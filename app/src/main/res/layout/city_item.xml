<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewOnCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/city_img"/>

        <TextView
            android:id="@+id/cityTextViewOnCard"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_height="0dp"
            tools:text="@string/moscow"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintTop_toTopOf="@id/tempTextViewOnCard"
            card_view:layout_constraintBottom_toBottomOf="@id/tempTextViewOnCard"
            card_view:layout_constraintEnd_toStartOf="@id/tempTextViewOnCard"
            card_view:layout_constraintStart_toStartOf="@id/imageViewOnCard"
            android:textColor="@color/colorBackground"
            android:background="#CC212121"
            />

        <TextView
            android:id="@+id/tempTextViewOnCard"
            tools:text="+7*C"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            card_view:layout_constraintEnd_toEndOf="@id/imageViewOnCard"
            card_view:layout_constraintBottom_toBottomOf="@id/imageViewOnCard"
            android:background="@color/colorBackground"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>